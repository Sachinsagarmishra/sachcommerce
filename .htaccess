RewriteEngine On

# Ensure SITE_URL is consistent (Optional, but good for SEO)
# RewriteCond %{HTTP_HOST} !^www\. [NC]
# RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

# Product Detail Page Rewrite: /products/{slug} -> product-detail.php?slug={slug}
RewriteRule ^products/([a-zA-Z0-9-]+)/?$ product-detail.php?slug=$1 [L,QSA]

# Remove .php extension
# 1. Redirect /file.php to /file
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 2. Map /file to /file.php internally
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*?)/?$ $1.php [L]